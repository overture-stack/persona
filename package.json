{
  "name": "@overture-stack/persona",
  "version": "1.1.1",
  "description": "ðŸš§ user profile and identity management",
  "main": "dist/index.js",
  "bin": {
    "persona-scripts": "dist/src/persona-scripts/index.js"
  },
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "start": "NODE_PATH=./ ts-node examples/app.ts",
    "test": "NODE_PATH=./ jest .test --notify",
    "build": "rm -rf dist && mkdir dist && NODE_PATH=./ tsc",
    "prepare": "rm -rf dist && mkdir dist && NODE_PATH=./ tsc",
    "dev": "concurrently --kill-others \"npm run watch\" \"npm run demon\"",
    "demon": "NODE_PATH=./ nodemon dist/examples/app.js",
    "watch": "NODE_PATH=./ tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overture-stack/persona.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/overture-stack/persona/issues"
  },
  "homepage": "https://github.com/overture-stack/persona#readme",
  "peerDependencies": {
    "migrate-mongo": "^3.0.2"
  },
  "dependencies": {
    "@overture-stack/ego-token-middleware": "^1.1.1",
    "babel-polyfill": "^6.26.0",
    "cors": "^2.8.4",
    "detect-installed": "^2.0.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "^0.11.7",
    "graphql-compose": "^4.0.1",
    "graphql-compose-mongoose": "^4.1.0",
    "graphql-compose-pagination": "^3.0.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.7.5",
    "ms": "^2.0.0",
    "node-vault": "^0.8.0",
    "portfinder": "^1.0.13",
    "url-join": "^2.0.2",
    "vault-auth-aws": "^0.1.7"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "concurrently": "^5.3.0",
    "jest": "^24.9.0",
    "minimist": "^1.2.5",
    "moxios": "^0.4.0",
    "nodemon": "^2.0.6",
    "pm2": "^2.8.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "resolutions": {
    "kind-of": "6.0.3",
    "minimist": "1.2.5",
    "minimist-string": "1.0.2",
    "object-path": "0.11.5",
    "tree-kill": "1.2.2",
    "yargs-parser": "20.2.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.(js|jsx|ts|tsx)",
      "<rootDir>/**/?(*.)(spec|test).(js|jsx|ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/",
      "setupJest.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  }
}
