  "dependencies": {
    "@types/node": "^8.0.51",
    "babel-polyfill": "^6.26.0",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "ego-token-middleware": "0.0.7",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "^0.11.7",
    "graphql-compose": "^4.0.1",
    "graphql-compose-mongoose": "^4.1.0",
